<% @gifs.each_slice(4) do |row| %>
  <div class="row">
    <% row.each do |gif| %>
      <div class="col-xs-3">
        <% if gif.file.blank? %>
          <%= link_to image_tag(gif.url, :class => "img-responsive"), gif_path(gif), "data-toggle" => "modal", "data-target" => "#defaultModal" %>
        <% else %>
          <%= link_to image_tag(attachment_url(gif, :file), :class => "img-responsive"), gif_path(gif), "data-toggle" => "modal", "data-target" => "#defaultModal" %>
        <% end %>
      </div>
    <% end %>
  </div>
<%end %>
